{# Marca/TagBundle/Resources/views/Tagset/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function()
        {
            {% for flashMessage in app.session.flashbag.get('update') %}
            $('#collapse{{ flashMessage }}').collapse('show');
            {% endfor %}
        });
    </script>
{% endblock %}

{% block content %}
    <div class="col-md-12">
        <h1>Labels</h1>
        <a class='btn btn-default ' href="{{ path('tagset_new') }}">Create Label Set</a>

        <div class="alert alert-info">
            Click Label set name to see complete label set.
        </div>

        <div class="panel-group" id="accordion">

            {% for tagset in tagsets%}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse{{tagset.id}}">
                            {{ tagset.name }}</a>
                    </h4>
                    {% if tagset.shared==1 %}(Shared){% elseif tagset.shared==2 %}(Default){%endif%}
                    {% if tagset.isOwner(app.user.username) %}
                        {% if tagset.isOwner(app.user.username) %}<a class='btn btn-default btn-sm pull-right' href="{{ path('tag_new', { 'tagsetid': tagset.id }) }}">Add Label</a>
                            <a class="btn btn-default btn-sm pull-right" href="{{ path('tagset_edit', { 'id': tagset.id }) }}">Edit</a>
                        {% endif %}
                    {% endif %}
                </div>
                <div id="collapse{{tagset.id}}" class="panel-collapse collapse">
                    <div class="panel-body">

                        <table class="table">
                            {% for tag in tagset.tag %}
                                <tr><td><span class="label label-default" style="background-color: {{ tag.color }}">{{ tag.name }}</span></td><td>{% if tagset.isOwner(app.user.username) %}<a class="btn btn-default btn-sm pull-right" href="{{ path('tag_edit', { 'id': tag.id,'tagsetid': tagset.id }) }}">Edit</a>{% endif %}</td></tr>
                            {% endfor %}
                        </table>

                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}