
{% extends 'MarcaYourBundle::layout.html.twig' %}

{% block content %}

<div class="col-md-2">
<a class="btn btn-info" href="{{ path('rating') }}">List</a>
<a class="btn btn-primary" href="{{ path('rating_edit', { 'id': entity.id }) }}">Edit</a>
 
</div>       
  
<div class="col-md-1">
<form action="{{ path('rating_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  

        

<div class="span9 well">
<legend></legend> 
</div>

<div class="span9 well">        
        Id         
        {{ entity.id }}        
        Value         
        {{ entity.value }}        
        Created        {{ entity.created|date('Y-m-d H:i:s') }}        
        Updated        {{ entity.updated|date('Y-m-d H:i:s') }}  

</div>          
{% endblock %}
