{# Marca/AssessmentBundle/Resources/views/Objective/edit.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block javascripts %}
{% endblock %}

{% block content %}
<div class="span9 well">
<h2>Assessment</h2>
</div>
<div class="span9 well">
        <form action="{{ path('objective_update', { 'id': objective.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
        <div>
            <button class="btn btn-primary" type="submit">Update</button><a class="btn" href="{{ path('assessmentset_show',{'id':objective.assessmentset.id}) }}">Cancel</a>
        </div>
        </form>
        
        <form action="{{ path('objective_delete', { 'id': objective.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-delete" type="submit">Delete</button>
        </form>
</div>
{% endblock %}
