{# Marca/AssessmentBundle/Resources/views/Objective/new.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="col-sm-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a class="btn btn-default pull-right margin-top-small" href="{{ path('assessmentset') }}">List Assessment Sets</a>
                <h2 class="margin-top-small">Learning objective</h2>
            </div>
            <div class="panel-body">
                <form action="{{ path('objective_create', {'assessmentsetid':assessmentsetid}) }}" method="post" {{ form_enctype(form) }}>
                    {{ form_widget(form) }}
            </div>
            <div class="panel-footer">
                <div class="btn-group">
                    <button class="btn btn-primary" type="submit">Create</button>
                    <a class="btn btn-default" href="{{ path('assessmentset_show', {'id':assessmentsetid}) }}">Cancel</a>
                </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
