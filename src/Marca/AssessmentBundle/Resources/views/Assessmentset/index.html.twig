{# Marca/AssessmentBundle/Resources/views/Assessmentset/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Assessment Sets</h2>
            <a class="btn btn-default" href="{{ path('assessmentset_new') }}">Create Assessment Set</a>
        </div>
        <div class="panel-body">
            <div class="list-group">
                {% for assessmentset in assessmentsets %}

                    <a class="list-group-item" href="{{ path('assessmentset_show', { 'id': assessmentset.id }) }}">
                        <h3>{{ assessmentset.name }}</h3>
                        {{ assessmentset.description|raw }}
                    </a>

                {% endfor %}
            </div>
        </div>
        <div class="panel-footer">
            <span class="text-muted">Click name to view. </span>
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Assessment Scales</h2>
            <a class="btn btn-default" href="{{ path('scale_new') }}">Create Scale</a>
        </div>
        <div class="panel-body">
            <div class="list-group">
                {% for scale in scales %}

                    <a class="list-group-item" href="{{ path('scale_show', { 'id': scale.id }) }}">
                        <h3>{{ scale.name }}</h3>
                    </a>

                {% endfor %}
            </div>
        </div>
        <div class="panel-footer">
            <span class="text-muted">Click name to view. </span>
        </div>
    </div>
</div>
{% endblock %}
