{# Marca/AssessmentBundle/Resources/views/Scaleitem/edit.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block javascripts %}
{% endblock %}

{% block content %}
<div class="col-md-11 well">
<h2>Scale</h2>
</div>

<div class="col-md-11 well">
        <form action="{{ path('scaleitem_update', { 'id': scaleitem.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            {{ form_widget(edit_form) }}
        <div>
            <button class="btn btn-primary" type="submit">Update</button><a class="btn btn-default" href="{{ path('scale_show', { 'id':scaleitem.scale.id }) }}">Cancel</a>
        </div>
        </form>
        
        <form action="{{ path('scaleitem_delete', { 'id': scaleitem.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-delete" type="submit">Delete</button>
        </form>       
</div>
{% endblock %}
