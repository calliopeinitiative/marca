{# Marca/AssessmentBundle/Resources/views/Scale/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="span9 well">
<legend>Scales</legend>
<a class="btn" href="{{ path('assessmentset') }}">List Assessment Sets and Scales</a>
</div>

<div class="span9 well">                
    <h3 class="inline">{{ scale.name }}</h3> 
    <a class="btn btn-primary pull-right" href="{{ path('scaleitem_new', {'scaleid':scale.id }) }}">Add Scale item</a> 
    <hr/>

{% for scaleitem in scale.scaleitems %}
<div class="span8">             
        <div class="row"><strong>{{ scaleitem.name }}</strong>  (value::{{ scaleitem.value }})
        <a class="btn btn-primary btn-small pull-right" href="{{ path('scaleitem_edit', { 'id': scaleitem.id, 'scaleid':scale.id }) }}">Edit</a>  
        </div>  
</div>
{% endfor %}    
             
</div>          
{% endblock %}
