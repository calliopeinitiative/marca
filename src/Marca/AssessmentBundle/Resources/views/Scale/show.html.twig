{# Marca/AssessmentBundle/Resources/views/Scale/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="col-md-8">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="btn btn-default pull-right" href="{{ path('assessmentset') }}">List Assessment Sets and Scales</a>
<h2>Scales</h2>
</div>

<div class="panel-body">
    <h3 class="inline">{{ scale.name }}</h3>
    <hr />
{% for scaleitem in scale.scaleitems %}
    <a class="btn btn-primary btn-sm pull-right" href="{{ path('scaleitem_edit', { 'id': scaleitem.id, 'scaleid':scale.id }) }}">Edit</a>
   <strong>{{ scaleitem.name }}</strong>  (value::{{ scaleitem.value }})
{% endfor %}
    </div>
           <div class="panel-footer">
               <a class="btn btn-primary" href="{{ path('scaleitem_new', {'scaleid':scale.id }) }}">Add Scale item</a>
           </div>
</div>
    </div>
{% endblock %}
