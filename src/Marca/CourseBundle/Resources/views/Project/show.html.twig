{# Marca/CourseBundle/Resources/views/Project/show.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
<div class="col-sm-2">
<div class="btn-group">
<a class="btn btn-default" href="{{ path('project') }}">List</a>
<a class="btn btn-default" href="{{ path('project_edit', { 'id': project.id }) }}">Edit</a>
 
</div> 
</div>       
  
<div class="col-sm-1">
<form action="{{ path('project_delete', { 'id': project.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
  
</div>
        
<div class="row-fluid">
<div class="col-sm-4">
<table class="table table-bordered table-condensed table-striped">
<tbody>        
    <tr>
        <th>Id</th>         
        <td>{{ project.id }}</td>         
    </tr>        
    <tr>
        <th>Name</th>         
        <td>{{ project.name }}</td>         
    </tr>        
    <tr>
        <th>Userid</th>         
        <td>{{ project.userid }}</td>         
    </tr>        
    <tr>
        <th>Sortorder</th>         
        <td>{{ project.sortOrder }}</td>         
    </tr>        
    <tr>
        <th>Resource</th>         
        <td>{{ project.resource }}</td>         
    </tr>  
</tbody>
</table>
</div>        
</div>      
{% endblock %}
