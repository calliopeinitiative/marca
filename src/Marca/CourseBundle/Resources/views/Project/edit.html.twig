{# Marca/CourseBundle/Resources/views/Project/edit.html.twig #}


{% extends 'MarcaUserBundle::dialog.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function()
        {
            $('#toggle_modal').click(function(){
                $('#delete_modal').modal();
            });
        });
    </script>
{% endblock %}

{% block content %}
    <div class="col-sm-6 center">
        <form action="{{ course_path('project_update', { 'id': project.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>{% if project.resource == false%}Folder in Projects{%else%}Unit in Resources{%endif%}</h2>
                </div>
                <div class="panel-body">
                    {{ form_errors(edit_form) }}
                    {{ form_row (edit_form.name) }}
                    <div style="display: none;">{{ form_row (edit_form.resource) }}</div>
                    <div style="{% if project.resource == 0 %}display: none;{% endif %}">{{ form_row (edit_form.coursehome) }}</div>
                    {{ form_rest(edit_form) }}
                </div>
                <div class="panel-footer">
                    <div class="btn-group">
                        <button class="btn btn-primary" type="submit">Update</button>
                        <a class="btn btn-default" href="{{ path('course_show', { 'courseid': courseid }) }}">Cancel</a>
                    </div>
                    <a class="btn btn-warning pull-right" id='toggle_modal' title='Delete' href='javascript:void(0);'>Delete</a>
                </div>
            </div>
        </form>
    </div>

    <div id="delete_modal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <span class="modal-title">Delete</span>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete?</p>
                    <form class="" action="{{ path('project_delete', { 'courseid':project.course.id,'id': project.id }) }}" method="post">
                        {{ form_widget(delete_form) }}
                        <div class="btn-group">
                            <button class="btn btn-danger" type="submit">Delete</button>
                            <a class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</a>
                        </div>
                    </form>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}
