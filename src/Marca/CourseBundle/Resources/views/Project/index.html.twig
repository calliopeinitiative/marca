{# Marca/CourseBundle/Resources/views/Project/index.html.twig #}


{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
   <div class="col-sm-4">
      <a class="btn btn-primary" href="{{ path('project_new', {'courseid': project.id}) }}">New</a>
   </div>
</div> 

<div class="row-fluid">
<div class="col-sm-6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>        
        <th>Id</th>        
        <th>Name</th>        
        <th>Userid</th>        
        <th>Sortorder</th>        
        <th>Resource</th>        
        <th>Actions</th>
    </tr>
</thead>    
<tbody>
    {% for project in projects %}
    <tr>        
        <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>        
        <td>{{ project.name }}</td>        
        <td>{{ project.userid }}</td>        
        <td>{{ project.sortOrder }}</td>        
        <td>{{ project.resource }}</td>        
        <td><div class="btn-group"><a class="btn btn-default" href="{{ path('project_show', { 'id': project.id }) }}">show</a><a class="btn btn-default" href="{{ path('project_edit', { 'id': project.id }) }}">edit</a></div>

</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
