{# Marca/CourseBundle/Resources/views/subnav.html.twig #}
{# This subnav is the top navigation when inside a course.  Included from layout.html.twig #}

{% if app.session.get('portReviewSwitch')!= 4 %}
    <li>
        <a title='Course Home' id="course-home" href="{{ course_path('course_home')}}">{% if app.session.get('course') %}{{ app.session.get('course')|slice(0, 15) }}{% else %}Course Home{% endif %}</a>
    </li>
    <li>
        <a  title='Select course' id='course_select' class="subnav-course-select" href="javascript:void(0);"><i alt='Select course' class="glyphicon glyphicon-list hidden-xs"></i></a>
    </li>

    <li>
        {% if app.session.get('resource_referrer')%}
            <a title='Course Resources' href="{{app.session.get('resource_referrer')}} ">Resources</a>
        {%else%}
            <a  title='Course Resources' href="{{ course_path('file_list', { 'project': 'recent', 'scope': 'all', 'user': '0', 'resource': '1', 'tag': '0', 'userid': '0' }) }}">Resources</a>

        {%endif%}
            </li>
    {% if app.session.get('module')== 0 %}
        <li>
            {% if app.session.get('referrer')%}
                <a title='Course Projects' href="{{app.session.get('referrer')}} ">Projects</a>
            {%else%}
                <a title='Course Projects' href="{{ course_path('file_list', { 'project': 'recent', 'scope': 'mine', 'user': '0', 'resource': '0', 'tag': '0', 'userid': '0' }) }}">Projects</a>
            {%endif%}
        </li>
    {%endif%}
    <li><a  title='Course Calendar' href="{{ course_path('calendar_display', { 'gotodate': "now"|date('Y-m-d')}) }}">Calendar</a></li>
    {% if app.session.get('journalSwitch')=='true' and app.session.get('module')== 0 %}<li><a  title='Course Journal' href="{{ course_path('journal') }}">Journal</a></li>{%endif%}
    {% if app.session.get('forumSwitch')=='true' and app.session.get('module')== 0 %}<li><a  title='Course Forum' href="{{ course_path('forum') }}">Forum</a></li>{%endif%}
    {% if app.session.get('notesSwitch')=='true' and app.session.get('module')== 0 %}<li><a  title='Course Notes' href="{{ course_path('note') }}">Notes</a></li>{%endif%}
{%endif%}
{% if app.session.get('portSwitch')=='true' and app.session.get('module')== 0 %}
    <li><a  title='Course Portfolio' href="{{ course_path('portfolio') }}">Portfolio</a></li>
{%endif%}









