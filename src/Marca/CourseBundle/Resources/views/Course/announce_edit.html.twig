{# Marca/CourseBundle/Resources/views/Course/edit.html.twig #}

{% extends 'MarcaHomeBundle::dialog.html.twig' %}

{% block content %}
    <div class="col-sm-8 center">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="margin-top-small">Announcements</h2>
            </div>

            <div class="panel-body">
                <form class="form" action="{{ path('announce_update', { 'courseid': course.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">
                    {{ form_errors(edit_form) }}
                    {{ form_row (edit_form.announcement) }}
                    {{ form_rest(edit_form) }}
                    <div class="btn-group">
                        <button class="btn btn-primary" type="submit">Update</button>
                        <a class="btn btn-default" href="{{ path('course_home', { 'courseid': course.id }) }}">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


