{# Marca/CourseBundle/Resources/views/Term/edit.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
<legend>Terms</legend>

<div class="row">
<div class="col-md-9 well">
<form action="{{ path('term_update', { 'id': term.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <div>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>
       
<form action="{{ path('term_delete', { 'id': term.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
</form>
</div>
</div>
{% endblock %}
