{# Marca/CourseBundle/Resources/views/Term/edit.html.twig #}

{% extends 'MarcaUserBundle::dialog.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="col-sm-6 center">
        <div class="panel panel-default">
            <form action="{{ path('term_update', { 'id': term.id }) }}" method="post">
                <div class="panel-heading">
                    Term
                </div>
                <div class="panel-body">
                    {{ form_errors(edit_form) }}
                    {{ form_widget(edit_form) }}
                    {{ form_rest(edit_form) }}
                </div>
                <div class="panel-footer">
                    <div class="btn-group">
                        <button class="btn btn-primary" type="submit">Update</button>
                        <a class="btn btn-default" href="{{ path('term') }}">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>


{% endblock %}