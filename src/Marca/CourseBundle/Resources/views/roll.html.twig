{# Marca/CourseBundle/Resources/views/roll.html.twig #}
{# esi fragment for course roll #}

<ul class="nav navbar-nav navbar-right">
    <li><a class="roll_previous" data-index="0" data-id='0' href="javascript:void(0);">
            &lt; Previous</a></li>
    <li class="dropdown">
        <a class="" href="#" title="Select by Author">Select Author <b class="caret"></b></a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="findByAuthor">
            {% for roll in roll %}
                <li><a class="roll" data-index="{{ loop.index }}" data-id='{{ roll.user.id }}' href="javascript:void(0);">
                        {{ roll.firstname|title }} {{ roll.lastname|title }}</a></li>
            {% endfor %}
        </ul>
    </li>
    <li><a class="roll_next" data-index="0" data-id='0' href="javascript:void(0);">
            Next &gt;</a></li>
</ul>
