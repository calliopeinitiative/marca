{# Marca/ForumBundle/Resources/views/Comment/new.html.twig #}

{% extends 'MarcaHomeBundle::dialog.html.twig' %}

{% block javascripts %}
    <script language="javascript">
        $(document).ready(function()
        {
            $('form li').addClass('alert alert-error');
        });
    </script>
{% endblock %}

{% block content %}
    <div class="col-sm-11 center">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="small">{{ parent.title }}</h2>
                by {{ parent.user.firstname|capitalize }} {{ parent.user.lastname|capitalize }}
                <p>Created  {{ parent.created|date('M d Y, h:ia') }}  / Updated  {{ parent.updated|date('M d Y, h:ia') }}</p>
            </div>
            <div class="panel-body">
                {{ parent.body|raw }}
            </div>
            <div class="panel-footer">
            </div>
        </div>
        <div class="panel panel-default">
            <form action="{{ course_path('comment_create', { 'forumid': forumid, 'parentid': parentid }) }}" method="post" {{ form_enctype(form) }} novalidate="novalidate">
                <div class="panel-heading">
                    Forum Comment
                </div>
                <div class="panel-body">
                    {{ form_errors(form) }}
                    {{ form_row(form.body) }}
                    {{ form_rest(form) }}
                </div>
                <div class="panel-footer">
                    <div class="btn-group">
                        <button class="btn btn-primary" type="submit">Update</button>
                        <a class='btn btn-default' href="{{ course_path('forum_show', { 'id': parent.id }) }}">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
