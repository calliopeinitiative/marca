{# Marca/ForumBundle/Resources/views/Comment/edit.html.twig #}

{% extends 'MarcaForumBundle::layout.html.twig' %}

{% block javascripts %}
    <script language="javascript">
        $(document).ready(function()
        {
            $('form li').addClass('alert alert-error');
        });
    </script>
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="inline">{{ parent.title }}</h2>
            <span class="margin-left">by {{ parent.user.firstname|capitalize }} {{ parent.user.lastname|capitalize }}</span>
            <p>Created  {{ parent.created|date('M d Y, h:ia') }}  / Updated  {{ parent.updated|date('M d Y, h:ia') }}</p>
        </div>
        <div class="panel-body">
            {{ parent.body|raw }}
        </div>
        <div class="panel-footer">
        </div>
    </div>

    <div class="panel panel-default">
        <form action="{{ course_path('comment_update', { 'id': comment.id, 'parentid': parent.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">

            <div class="panel-heading">
                Forum Comment
            </div>
            <div class="panel-body">
                {{ form_errors(edit_form) }}
                {{ form_row(edit_form.body) }}
                {{ form_rest(edit_form) }}
            </div>
            <div class="panel-footer">
                <div class="btn-group">
                    <button class="btn btn-primary" type="submit">Update</button>
                    <a class='btn btn-default' href="{{ course_path('forum_show', { 'id': parent.id }) }}">Cancel</a>
                </div>
            </div>
        </form>
    </div>


{% endblock %}
