{# Marca/JournalBundle/Resources/views/layout.html.twig #}

{% extends '::base.html.twig' %}
{% block title %}{{ application_name }} Journal{% endblock %}

{% block stylesheets %}{{ parent() }}{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}

{% block subnav %}
{%include 'MarcaCourseBundle::subnav.html.twig' %}
{% endblock %}


{% block sidebar %}
       <h1>Journal</h1>
             <a class="btn btn-primary" href="{{ course_path('journal_new')  }}" >Create<i class="glyphicon-pencil glyphicon-white"></i></a>
             <li><a href="{{ course_path('journal') }}">List Entries</a></li>  
             {% if role==2 %}
             <li class="dropdown">
                <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown" id="dLabel">Roll<b class="caret"></b></a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                        {% for roll in roll %}
                        <li><a title='View the Journal of {{roll.firstname}} {{roll.lastname}}' data-index="{{loop.index}}" data-id='{{roll.userid}}' href="{{ course_path('journal_user', { 'userid': roll.userid, 'user': loop.index }) }}">{{roll.firstname}} {{roll.lastname}}</a></li> 
                        {% endfor %}
                    </ul>
              </li>
              {% endif %}   

{% endblock %}  
