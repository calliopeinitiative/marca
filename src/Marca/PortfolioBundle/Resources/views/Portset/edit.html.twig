{# Marca/PortfolioBundle/Resources/views/Portset/edit.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}

    <div class="col-md-12">
        <form action="{{ path('portset_update', { 'id': portset.id }) }}" method="post" {{ form_enctype(edit_form) }}>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Portfolios</h2>
                </div>
                <div class="panel-body">
                    {{ form_errors(edit_form) }}
                    {{ form_row(edit_form.name) }}
                    {{ form_row(edit_form.description) }}
                    {{ form_rest(edit_form) }}
                </div>
                <div class="panel-footer">
                    <div class="btn-group">
                        <button class="btn btn-primary" type="submit">Update</button>
                        <a class="btn btn-default" href="{{ path('portset') }}">Cancel</a>

                    </div>
                </div>
            </div>
        </form>


        <form class="form" action="{{ path('portset_delete', { 'id': portset.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-warning pull-right" type="submit">Delete</button>
        </form>

    </div>

{% endblock %}
