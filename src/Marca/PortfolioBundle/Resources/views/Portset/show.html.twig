{# Marca/PortfolioBundle/Resources/views/Portset/show.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Portfolios</h2>
            <a class="btn btn-default" href="{{ path('portset') }}">List Portfolio Sets</a>
        </div>
        <div class="panel-body">

            <div class="col-md-12">
                <h3>{{ portset.name }}</h3>
                <a class="btn btn-default btn-sm pull-right" href="{{ path('portitem_new', { 'portsetid': portset.id }) }}">Add Item</a>
                <a class="btn btn-default btn-sm pull-right" href="{{ path('portset_edit', { 'id': portset.id }) }}">Edit</a>
                {{ portset.description|raw }}
                <div class="list-group">
                    {% for portitem in portitems %}

                        <a class="list-group-item" href="{{ path('portitem_edit', { 'id': portitem.id }) }}">
                            <h4>{{ portitem.name }}</h4>
                            {{ portitem.description|raw }}
                        </a>

                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <span class="text-muted">Click item to edit. </span>
        </div>
    </div>
{% endblock %}
