{# Marca/PortfolioBundle/Resources/views/Portfolio/edit.html.twig #}

{% extends 'MarcaPortfolioBundle::layout.html.twig' %}

{% block content %}
<div class="col-md-6 col-md-offset-1">
    <div class="panel panel-default">
        <div class="panel-heading">
<form class="form" action="{{ course_path('portfolio_update', { 'id': portfolio.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_errors(edit_form) }}
    <h3 class="panel-title">Portfolio</h3>
        </div>
        <div class="panel-default" style="padding: 10px;">
          <p>{{ form_row (edit_form.portitem) }}</p>
          <p>{{ form_row (edit_form.portorder) }}</p>
    {{ form_rest(edit_form) }}
        </div>
        <div class="panel-footer">
            <button class="btn btn-primary" type="submit">Create</button>
        </div>
</form>
    </div>
</div>
{% endblock %}
