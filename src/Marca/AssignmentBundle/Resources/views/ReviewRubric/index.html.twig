{# Marca/AssignmentBundle/Resources/views/ReviewRubric/index.html.twig #}

{% extends 'MarcaAssignmentBundle::layout.html.twig' %}




{% block content %}

<h1>ReviewRubric list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Instructions</th>
            <th>Keywords</th>
            <th>Shared</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('reviewrubric_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.description }}</td>
            <td>{{ entity.instructions }}</td>
            <td>{{ entity.keywords }}</td>
            <td>{{ entity.shared }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('reviewrubric_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('reviewrubric_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('reviewrubric_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}