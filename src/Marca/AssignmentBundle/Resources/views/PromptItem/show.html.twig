{% extends 'MarcaAssignmentBundle::layout.html.twig' %}

{% block content %}

<h1>PromptItem</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Prompt</th>
            <td>{{ entity.prompt }}</td>
        </tr>
        <tr>
            <th>Helptext</th>
            <td>{{ entity.helpText }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('promptitem') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('promptitem_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('promptitem_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}