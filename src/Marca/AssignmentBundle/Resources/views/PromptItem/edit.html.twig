{# Marca/AssignmentBundle/Resources/views/PromptItem/edit.html.twig #}

<div class="modal-dialog">
    <script language="javascript">
        $(document).ready(function () {
            $('#delete_prompt').click(function () {
                $('#review_modal').load('{{path('promptitem_delete_modal',  { 'id': promptitem.id}) }}').modal();
            });
        });
    </script>

    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edit Prompt</h4>
        </div>
        <div class="modal-body">
            <form action="{{ path('promptitem_update', { 'id': promptitem.id }) }}"
                  method="post" {{ form_enctype(edit_form) }} style="margin-bottom:0;">

                {{ form_widget(edit_form) }}
                <button type="submit" class="btn btn-primary pull-right" type="submit">Post</button>
                <a id="delete_prompt" class="btn btn-warning"
                   title='Delete prompt' href="javascript:void(0);">Delete</a>
            </form>
        </div>
    </div>
    <!-- /.modal-content -->
</div><!-- /.modal-dialog -->
