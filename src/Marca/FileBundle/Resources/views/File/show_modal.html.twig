{# Marca/FileBundle/Resources/views/File/show_modal.html.twig #}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Delete File</div>

            <div class="modal-body">
                Are you sure you want to delete this file?

                {% if app.request.get('source')=='edit_modal' %}
                    <form action="{{ course_path('file_delete', { 'id': file.id, 'resource': app.request.get('resource') }) }}" method="post">
                        {{ form_widget(delete_form) }}
                        <div class="btn btn-group">
                            <button class="btn btn-danger" type="submit">Confirm Delete</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
                        </div>
                    </form>
                {% endif%}

            </div>
            <div class="modal-footer">

            </div>
        </form>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->