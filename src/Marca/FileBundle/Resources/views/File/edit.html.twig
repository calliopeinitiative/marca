{# Marca/FileBundle/Resources/views/File/edit.html.twig #}

{% extends 'MarcaFileBundle::layout.html.twig' %}

{% block content %}
<script language="javascript"> 
$(document).ready(function() {
$('form ul li div ul li').addClass('alert alert-error');
$('#file_modal').modal();
});
</script>

{# Modal #}
<div id="file_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">    
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Edit Listing</h3>
</div>
<form action="{{ course_path('file_update', { 'id': file.id, 'resource': app.request.get('resource') }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate"> 
  <div class="modal-body">
      {{ form_errors(edit_form) }} 
        <ul class="list-unstyled">
            <li class="pad1">{{ form_row (edit_form.name) }} </li>
            <li class="pad1">{{ form_row (edit_form.url) }} </li>
            <li class="pad1">{{ form_row (edit_form.project) }} </li> 
            <li class="pad1">{{ form_row (edit_form.tag) }} </li> 
            <li class="pad1">{{ form_row (edit_form.access) }} </li> 
        </ul>
        {{ form_rest(edit_form) }}  
  </div>
  <div class="modal-footer">
    <a id='file_show_{{file.id}}' href='javascript:void(0);' class="btn btn-default pull-left">Delete</a>
    <button class="btn btn-primary pull-right" type="submit">Update</button>  
  </div>
</form> 
</div>


{% endblock %}
