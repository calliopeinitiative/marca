{# Marca/FileBundle/Resources/views/File/edit_modal.html.twig #}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">File Settings</h4>
        </div>
        <form action="{{ course_path('file_update',{'id': file.id,'resource': app.request.get('resource'), 'tag': app.request.get('tag'),'type': app.request.get('type'),
        'user': '0','project': 'recent', 'fileid':app.request.get('fileid')}) }}" method="post" {{ form_enctype(edit_form) }}  novalidate="novalidate">
            <div class="modal-body">
                {{ form_errors(edit_form) }}
                <div class="{% if file.reviewed %}hidden{% endif %}">{{ form_row (edit_form.name) }}</div>
                {{ form_row (edit_form.url) }}
                <div class="{% if file.reviewed %}hidden{% endif %}">{{ form_row (edit_form.project) }}</div>
                <div class="{% if file.reviewed %}hidden{% endif %}">{{ form_row (edit_form.tag) }}</div>
                {{ form_row (edit_form.access) }}
                {{ form_rest(edit_form) }}
            </div>
            <div class="modal-footer">
                <div class="btn-group margin-top">
                    <button type="submit" class="btn btn-primary pull-right" type="submit">Update</button>
                </div>

            </div>
        </form>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

