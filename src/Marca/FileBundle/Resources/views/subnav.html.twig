    <nav class="subnav navbar navbar-default hidden-xs" role="navigation">
        <div class="navbar-header col-sm-2">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#" title="File listing">
                {% if byuser %}{{ byuser.firstname }} {{ byuser.lastname }}
                {% elseif app.request.get('scope')=='mine' %}My Files
                {% elseif app.request.get('scope')=='reviews' %}Reviews
                {% else  %}Shared Files
                {% endif %}</a>
        </div>

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
