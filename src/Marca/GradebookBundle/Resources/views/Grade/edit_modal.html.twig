{# Marca/FileBundle/Resources/views/File/new_modal.html.twig #}

<script language="javascript">
    $(document).ready(function () {
        var options = {
            target: '#grades',
            success: load_update
        };
        $('form').submit(function () {
            $(this).ajaxSubmit(options);
            return false;

        });
        function load_update() {
            $('#modal, #confirm-delete').modal('hide');
        };
        $( "#confirm" ).click(function() {
            $('#confirm-delete').modal('show');
        });

    });
</script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edit Grade</h4>
        </div>
        <div class="modal-body">
            {{ form(edit_form) }}
            <a id='confirm' href="#" class="btn btn-warning pull-right">Delete</a>
        </div>
    </div>
    <!-- /.modal-content -->
</div><!-- /.modal-dialog -->


<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Confirm Delete
            </div>
            <div class="modal-body" style="height:200px;">
                <p class="margin-top">Are you sure you want to delete.</p>
                {{ form(delete_form) }}
            </div>
        </div>
    </div>
</div>


