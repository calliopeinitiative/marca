{# Marca/NoteBundle/Resources/views/Note/edit.html.twig #}

{% extends 'MarcaHomeBundle::dialog.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function()
        {
            {# form page close/cancel adjust for appropriate redirect #}
            $('#close_form').click(function(){
                window.location.href='{{ course_path('note') }}';
            });
        });
    </script>
{% endblock %}

{% block content %}

    <div class="col-sm-8 center">
        <form action="{{ course_path('note_update', { 'id': note.id }) }}" method="post" {{ form_start(edit_form) }}>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button id="close_form" type="button" class="close">&times;</button>
                    <h2 class="panel-title small">Note</h2>
                </div>
                <div class="panel-body">
                    {{ form(edit_form) }}
                    <a class="btn btn-warning" id='toggle_modal' title='Delete' href='javascript:void(0);'>Delete</a>
                </div>
            </div>
        </form>
    </div>

    {# Modal for Delete confirmation #}
    {{ form(delete_form)|delete_modal }}

{% endblock %}
