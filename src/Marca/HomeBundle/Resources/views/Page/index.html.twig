{# Marca/HomeBundle/Resources/views/Page/index.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function()
        {

        });
    </script>
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <a class="btn btn-primary pull-right margin-top" href="{{ path('page_new') }}">Create Page<i class="glyphicon glyphicon-pencil glyphicon-white"></i></a>
            <h2>Pages</h2>
        </div>
        <div class="panel-body">
            <table class="table">
                <tbody>
                {% for page in pages %}
                    <tr>
                        <td>{{ page.title }}</td>
                        <td>{% if page.type ==1 %}Research consent form{% elseif page.type ==2 %}Rubric{% else %}Display on Homepage{% endif %}</td>
                        <td><a class="btn btn-default" href="{{ path('page_show', { 'id': page.id }) }}">show</a><a class="btn btn-primary" href="{{ path('page_edit', { 'id': page.id }) }}">edit</a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="panel-footer">
            <span class="text-muted"> </span>
        </div>
    </div>

{% endblock %}
