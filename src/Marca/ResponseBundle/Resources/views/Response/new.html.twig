{# Marca/ResponseBundle/Resources/views/Response/edit.html.twig #}

{% extends 'MarcaResponseBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function()
        {
            $('#toggle_modal').click(function(){
                $('#delete_modal').modal();
            });
        });
    </script>
{% endblock %}

{% block content %}
    <div class="col-sm-11 center">
            <div class="col-sm-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title small">
                            {{ journal.title }}
                        </h2>
                        <span>Created  {{ journal.created|date('M d Y, h:ia') }}  / Updated  {{ journal.updated|date('M d Y, h:ia') }}</span>
                    </div>
                    <div class="panel-body">
                        {{ journal.body|raw }}
                    </div>
                </div>
            </div>

        <div class="col-sm-4">
            <form action="{{ course_path('response_create', { 'sourceid': sourceid,'page': app.request.get('page'),'user': app.request.get('user') }) }}" method="post" {{ form_enctype(form) }} novalidate="novalidate">

            <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title small">
                            Journal Response
                        </h2>
                    </div>
                    <div class="panel-body">
                        {{ form_widget(form) }}
                    </div>
                    <div class="panel-footer">
                        <div class="btn-group">
                            <button class="btn btn-primary" type="submit">Submit</button>
                                <a class="btn btn-default" href="{{ course_path('journal_list', { 'id': response.id, 'sourceid': sourceid,'view': app.request.get('view'),'page': app.request.get('page'),'user': app.request.get('user'),'userid':app.request.get('userid') }) }}">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}



