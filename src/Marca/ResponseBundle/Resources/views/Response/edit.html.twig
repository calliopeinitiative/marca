{# Marca/ResponseBundle/Resources/views/Response/edit.html.twig #}

{% extends 'MarcaHomeBundle::dialog.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function()
        {
            $('#toggle_modal').click(function(){
                $('#delete_modal').modal();
            });
            $('#doc-display').css('height', function(index) {
                return $(window).height()* .88;
            });
            $('iframe').css('height', function(index) {
                return $(window).height() * .88;
            });
        });
    </script>
{% endblock %}

{% block content %}
    <div class="col-sm-11 center">
        {% if journal %}
            <div class="col-sm-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title small">
                            {{ journal.title }}
                        </h2>
                        <span>Created  {{ journal.created|date('M d Y, h:ia') }}  / Updated  {{ journal.updated|date('M d Y, h:ia') }}</span>
                    </div>
                    <div class="panel-body">
                        {{ journal.body|raw }}
                    </div>
                </div>
            </div>


        {% else %}
            {% if not file.doc %}
                <iframe class="col-sm-8" id="viewer" src="{{ asset('bundles/marcahome/Viewer.js/index.html') }}#{{ course_path('file_get', { 'id': file.id }) }}/{{ file.name }}.{{ file.ext }}" allowfullscreen="true" webkitallowfullscreen="true"></iframe>
            {% else %}
                <div id='doc-display' class="col-sm-8 well">
                    <div class="doc-body">
                        {{ doc.body|raw }}
                    </div>
                </div>
            {% endif %}

        {%endif %}


        <div class="col-sm-4">
            <form action="{{ course_path('response_update', { 'id': response.id, 'source': source, 'sourceid': sourceid,'view': app.request.get('view'),'page': app.request.get('page'),'user': app.request.get('user') }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title small">
                            {% if journal %}Journal Response{% else %}Feedback{% endif %}
                        </h2>
                    </div>
                    <div class="panel-body">
                        {{ form_widget(edit_form) }}
                    </div>
                    <div class="panel-footer">
                        <div class="btn-group">
                            <button class="btn btn-primary" type="submit">Update</button>
                            {% if journal %}
                                <a class="btn btn-default" href="{{ course_path('journal_list', { 'id': response.id, 'source': source, 'sourceid': sourceid,'view': app.request.get('view'),'page': app.request.get('page'),'user': app.request.get('user'),'userid':app.request.get('userid') }) }}">Cancel</a>
                            {%else %}
                                <a class="btn btn-default" href="{{ course_path(source, { 'id': sourceid,'view': app.request.get('view') }) }}">Cancel</a>
                            {%endif %}
                        </div>
                        <a class="btn btn-warning pull-right" id='toggle_modal' title='Delete' href='javascript:void(0);'>Delete</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {# Modal for Delete confirmation #}
    <div id="delete_modal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <span class="modal-title">Delete</span>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete?</p>
                    <form action="{{ course_path('response_delete', { 'id': response.id, 'source': source, 'sourceid': sourceid,'view': app.request.get('view'),'page': app.request.get('page'),'user': app.request.get('user'),'userid':app.request.get('userid')  }) }}" method="post">
                        {{ form_widget(delete_form) }}
                        <div class="btn-group">
                            <button class="btn btn-danger" type="submit">Delete</button>
                            <a class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</a>
                        </div>
                    </form>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}


