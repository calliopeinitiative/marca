{# Marca/DocBundleBundle/Resources/views/Markupset/findMarkupset.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}

    <div class="col-md-8">
    <div class="row">
    <legend>Available Markup Sets</legend>

    <table class="table">
    {% for set in markupsets %}
            <tr><td>{{ set.name }}</td>
            <td>{{set.owner.firstname}} {{set.owner.lastname}}</td>
            <td>{{set.description}}</td>
            <td>{% if set.hasAccess(app.user) %}<span class="label label-info">In my sets</span>{% endif %}</td>
            <td>{% if set.hasAccess(app.user) %}<a class="btn btn-warning btn-mini" href="{{ path('remove_markupset', { 'id':set.id }) }}">Remove from sets</a>
                {% else %}<a class="btn btn-primary btn-mini" href="{{ path('add_markupset', { 'id':set.id }) }}">Add to my sets</a>{% endif %}</td> 
            </tr>
    {% endfor %}
    </table>
    </div>
    </div>



{% endblock %}
