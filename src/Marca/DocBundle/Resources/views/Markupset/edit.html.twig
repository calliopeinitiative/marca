{# Marca/DocBundle/Resources/views/Markupset/edit.html.twig #}

{% extends 'MarcaUserBundle::dialog.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script language="javascript">
        $(document).ready(function()
        {
            {# form page close/cancel adjust for appropriate redirect #}
            $('#close_form').click(function(){
                window.location.href='{{ path('markupset') }}';
            });
       });
    </script>
{% endblock %}

{% block content %}
    <div class="col-sm-8 center">
        <form action="{{ path('markupset_update', { 'id': markupset.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button id="close_form" type="button" class="close">&times;</button>
                    <h2 class="panel-title small">Markup Set</h2>
                </div>
                <div class="panel-body">
                    {{ form_widget(edit_form) }}
                    <button class="btn btn-primary  pull-right" type="submit">Post</button>
                    <a class="btn btn-warning" id='toggle_modal' title='Delete' href='javascript:void(0);'>Delete</a>
                </div>
            </div>
        </form>
    </div>

    {# Modal for Delete confirmation #}
    {{ form(delete_form)|delete_modal }}
{% endblock %}
