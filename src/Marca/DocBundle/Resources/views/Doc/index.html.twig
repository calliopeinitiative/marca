{# Marca/DocBundle/Resources/views/Doc/index.html.twig #}

{% extends 'MarcaDocBundle::layout.html.twig' %}

{% block content %}
<div class="row-fluid">
   <div class="col-md-4">
      <a class="btn btn-primary" href="{{ course_path('doc_new') }}">New</a>
   </div>
</div> 

<div class="row-fluid">
<div class="col-md-6">
<table class="table table-bordered table-condensed table-striped">
<thead>
    <tr>        
        <th>Id</th>        
        <th>Userid</th>        
        <th>Courseid</th>        
        <th>Body</th>        
        <th>Created</th>        
        <th>Updated</th>        
        <th>Actions</th>
    </tr>
</thead>    
<tbody>
    {% for doc in docs %}
    <tr>        
        <td><a href="{{ course_path('doc_show', { 'id': doc.id }) }}">{{ doc.id }}</a></td>        
        <td>{{ doc.userid }}</td>        
        <td>{{ doc.courseid }}</td>        
        <td>{{ doc.body }}</td>        
        <td>{% if doc.created %}{{ doc.created|date('Y-m-d H:i:s') }}{% endif%}</td>        
        <td>{% if doc.updated %}{{ doc.updated|date('Y-m-d H:i:s') }}{% endif%}</td>        
        <td><div class="btn-group"><a class="btn" href="{{ course_path('doc_show', { 'id': doc.id }) }}">show</a><a class="btn" href="{{ course_path('doc_edit', { 'id': doc.id }) }}">edit</a></div>
   

</td>       
    </tr>
    
    {% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock %}
