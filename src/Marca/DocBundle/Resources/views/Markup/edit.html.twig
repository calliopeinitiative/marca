{# Marca/DocBundle/Resources/views/Markup/edit.html.twig #}

{% extends 'MarcaUserBundle::dialog.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/marcahome/js/colorPick.js') }}"></script>
    <script language="javascript">
        $(document).ready(function () {
            $('#toggle_modal').click(function () {
                $('#delete_modal').modal();
            });
            $("#marca_docbundle_markuptype_color").colorPick({
                'initialColor': 'royalblue',
                'allowRecent': true,
                'recentMax': 5,
                'allowCustomColor': false,
                'palette': ['royalblue', 'seagreen', 'slateblue', 'darkorange',
                    'darkmagenta', 'darkslategrey', 'teal', 'firebrick', 'orange',
                    'cadetblue', 'tomato', 'blueviolet'],
                'onColorSelected': function () {
                    this.element.css({'backgroundColor': this.color, 'color': this.color});
                    var selectedColor = this.color;
                    selectedColor = selectedColor.toLowerCase();
                    this.element.val(selectedColor);
                }
            });
            $("#marca_docbundle_markuptype_color").val("{{markup.color}}").attr("style","background-color:{{ markup.color }}; color:{{ markup.color }}");

        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/marcahome/css/colorPick.css') }}">
{% endblock %}

{% block content %}
    <div class="col-sm-8 center">
        <form class="form" action="{{ path('markup_update', { 'id': markup.id, 'set_id': app.request.get('set_id')}) }}" method="post" novalidate="novalidate">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title small">Markup Tag</h2>
                </div>
                <div class="panel-body">
                    {{ form_errors(edit_form) }}
                    {{ form_widget(edit_form) }}
                    {{ form_rest(edit_form) }}
                        <button class="btn btn-primary pull-right" type="submit">Post</button>
                    <a class="btn btn-warning" id='toggle_modal' title='Delete' href='javascript:void(0);'>Delete</a>
                </div>
            </div>
        </form>
    </div>

    {# Modal for Delete confirmation #}
    <div id="delete_modal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <span class="modal-title">Delete</span>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete?</p>
                    <form action="{{ path('markup_delete', { 'id': markup.id }) }}" method="post">
                        {{ form_widget(delete_form) }}
                        <div class="btn-group">
                            <button class="btn btn-danger" type="submit">Delete</button>
                            <a class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</a>
                        </div>
                    </form>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}

