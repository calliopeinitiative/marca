{# Marca/DocBundle/Resources/views/Markup/new.html.twig #}

{% extends 'MarcaUserBundle::dialog.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/marcahome/js/spectrum.js') }}"></script>
    <script language="javascript">
        $(document).ready(function () {
            {# form page close/cancel adjust for appropriate redirect #}
            $('#close_form').click(function () {
                window.location.href = '{{ path('markupset') }}';
            });
            $("#marca_docbundle_markuptype_color").spectrum({
                preferredFormat: "name",
                showPaletteOnly: true,
                showInput: true,
                color: 'lavender',
                palette: [
                    ['lavender', 'lavenderblush', 'lightblue', 'lightcoral'],
                    ['lightcyan', 'lightgoldenrodyellow', 'lightgray', 'lightpink'],
                    ['lightsalmon', 'lightskyblue', 'lightsteelblue', 'lightyellow'],
                    ['palegreen', 'paleturquoise', 'peachpuff', 'plum']
                ]
            });
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/marcahome/css/spectrum.css') }}">

{% endblock %}

{% block content %}


    <div class="col-sm-8 center">
        <div class="panel panel-default">
            <form action="{{ path('markup_create', { 'set_id': app.request.get('set_id')}) }}" method="post" {{ form_enctype(form) }}>
            <div class="panel-heading">
                <button id="close_form" type="button" class="close">&times;</button>
                <h2 class="panel-title small">Markup Tag</h2>
            </div>
            <div class="panel-body">
                {{ form_widget(form) }}
                <button class="btn btn-primary pull-right" type="submit">Post</button>
            </div>
            </form>
        </div>
    </div>

{% endblock %}
