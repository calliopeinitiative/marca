{# Marca/CalendarBundle/Resources/views/Calendar/new.html.twig #}

{% extends 'MarcaHomeBundle::dialog.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/marcahome/js/jquery.timepicker.min.js') }}"></script>
    <script src="{{ asset('bundles/marcahome/js/colorPick.js') }}"></script>
    {% set set_date = app.request.get('set_date')|date("m/d/Y") %}

    <script language="javascript">
        $(document).ready(function () {
            {# form page close/cancel adjust for appropriate redirect #}
            $('#close_form').click(function () {
                window.location.href = '{{ course_path('calendar_display', { 'gotodate': "now"|date('Y-m-d')}) }}';
            });
            $('#calendar_startDate').val('{{ set_date }}');
            $('#calendar_startDate').datepicker({
                showButtonPanel: true,
            });
            $('#calendar_startTime').timepicker(({'timeFormat': 'H:i'}));
            $('#calendar_endDate').datepicker({
                showButtonPanel: true,
            });
            $('#calendar_endTime').timepicker(({'timeFormat': 'H:i'}));
            $("#calendar_color").colorPick({
                'initialColor': 'lightblue',
                'allowRecent': true,
                'recentMax': 5,
                'allowCustomColor': false,
                'palette': ['lightblue', 'lightgrey', 'lightpink', 'thistle',
                    'moccasin', 'palegreen', 'lemonchiffon', 'gold', 'lightsalmon',
                    'mediumaquamarine', 'lightcoral', 'plum'],
                'onColorSelected': function () {
                    this.element.css({'backgroundColor': this.color, 'color': this.color});
                    var selectedColor = this.color;
                    selectedColor = selectedColor.toLowerCase();
                    this.element.val(selectedColor);
                }
            });
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/marcahome/css/colorPick.css') }}">
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/marcahome/css/jquery.timepicker.css') }}">
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/marcahome/css/jquery-ui.theme.min.css') }}">
{% endblock %}

{% block content %}
    <div class="col-sm-8 center">
        <div class="panel panel-default">
            <div class="panel-heading">
                <button id="close_form" type="button" class="close">&times;</button>
                <h2 class="panel-title small">Calendar Event</h2>
            </div>
            <div class="panel-body">
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}


