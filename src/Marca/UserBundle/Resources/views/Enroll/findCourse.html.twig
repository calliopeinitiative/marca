{# Marca/UserBundle/Resources/views/Enroll/findCourse.html.twig #}

{% extends 'MarcaUserBundle::layout.html.twig' %}

{% block content %}

    <div class="col-sm-6">
        <div class="panel panel-marca">
            <div class="panel-heading">
                <h2 class="panel-title">Find Courses</h2>
            </div>
            <div class="panel-body">
                {% for course in possible_courses %}
                    {% for exiting_course in courseids if exiting_course.id == course.id %}
                {%else%}
                    <div class="col-sm-10">
                        <div class="col-sm-10">
                            <h2>{{ course.name }}</h2>
                            <p>{{course.firstname}} {{course.lastname}}, {{ course.time|date('h:i a') }}</p>
                        </div>
                        <div class="col-sm-2">
                            <a class="btn btn-primary margin-top" title="Enroll in this course" href="{{ path('enroll_enroll', { 'courseid': course.id } ) }}">Enroll</a>
                        </div>
                    </div>
                {% endfor %}
                {% else %}
                    {% if app.request.attributes.get('_route') == 'enroll_find' %}
                    What's your instructor's last name?
                    {% else %}
                    Shoot, didn't find anyone with that name. Want to try again?
                    {% endif %}

                    <form action="{{ path('enroll_list') }}" method="post" {{ form_enctype(form) }}>
                        {{ form_widget(form) }}
                        <button class="btn btn-primary margin-top" type="submit">Find Course</button>
                    </form>
                {% endfor %}
            </div>
            {% if possible_courses %}
            <div class="panel-footer">
                <span class="text-muted">
                    Which course do you want to enroll in?
                </span>
            </div>
            {% endif %}
        </div>
    </div>

{% if pending %}
<div class="col-sm-6">
    <div class="panel panel-marca">
    <div class="panel-heading">
<h2 class="panel-title">Courses Pending</h2>
        </div>
        <div class="panel-body">
        {% for course in pending %}
        <div class="col-sm-10">
            <h2 class="margin-top-small">{{ course.name }}</h2>
            <p>{{course.user.firstname}} {{course.user.lastname}}, {{ course.time|date('h:i a') }}</p>
        </div>
           {% endfor %}
            </div>
        <div class="panel-footer">
            <span class="text-muted">Enrollment pending.  Please check back soon.</span><a class='btn btn-primary btn-xs pull-right' href="{{ path('user_home') }}">Check now</a>
        </div>
</div>
    </div>
{% endif %}

{% if courses %}
<div class="col-sm-6">
    <div class="panel panel-marca">
    <div class="panel-heading">
<h2 class='panel-title'>Courses Enrolled</h2>
        </div>
        <div class="panel-body">
        {% for course in courses %}
          <div class="col-sm-10">
              <a href="{{ path('course_home', { 'courseid': course.id }) }}"><h2 class="margin-top-small">{{ course.name }}</h2></a>
            <p>{{course.user.firstname}} {{course.user.lastname}}, {{ course.time|date('h:i a') }}</p>
        </div>
        {% endfor %}

        </div>
        <div class="panel-footer">
        <span class="text-muted">Click name to enter.</span>
</div>
        </div>
    </div>
{% endif %}

{% endblock %}