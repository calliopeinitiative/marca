{# Marca/UserBundle/Resources/views/Default/edit.html.twig #}

{% extends 'MarcaUserBundle::dialog.html.twig' %}

{% block content %}
    <div class="col-sm-11 center">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Research Consent Form</h2>
            </div>

            <div class="panel-body">
                {% for page in pages %}
                    {{ page.body|raw }}
                {% endfor %}

            </div>


            <div class="panel-body">
                <form class="form" action="{{ path('user_updateresearch', { 'id': user.id }) }}" method="post" {{ form_enctype(edit_form) }} novalidate="novalidate">

                    {{ form_errors(edit_form) }}
                    {{ form_row(edit_form.research) }}
                    {{ form_rest(edit_form) }}
                    <hr/>
                    <div class="">
                        <button class="btn btn-primary" type="submit">Update</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock %}